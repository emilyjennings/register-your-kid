<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Hi! Sign Up</h1>

<%= form_for Parent.new do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>

  <%=f.submit 'Submit' %>
<%end%>

<p>Not a new user? <%= link_to "Log in!", login_path %></p>
