<%= render 'style' %>

<%if logged_in?%>
  <h2>Welcome, <%=current_user.name.capitalize%>!</h2>
  <%= link_to "Profile", parent_path(session[:id]) %>
  <p><%= link_to "Log out", logout_path, method: :delete %></p>
<%else%>
  <h2>Hi! Go ahead and log in or sign up.</h2>

  <p><%= link_to 'Sign Up', signup_path%></p>
  <p><%= link_to 'Log In', login_path%></p>
<%end%>
